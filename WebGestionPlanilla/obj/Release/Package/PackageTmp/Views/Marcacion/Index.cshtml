@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Marcacion";
}

<section class="content-header">
    <h1>Marcacion</h1>
    <br />
    <div class="form-row" style="text-align: right;">
        <button id="btnFechaActual" class="btn btn-primary btn-sm" type="button">Actualizar</button>
        <label id="txtFechaActual"></label>
    </div>

</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">&nbsp;</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body ">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label>Ingreso:</label>
                            <label id="txtMarcarIngreso">Ingreso</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-1" style="width:10%;">
                            <button id="btnMarcarIngreso" class="btn btn-success btn-sm" type="button">Marcar Ingreso</button>
                        </div>
                        <div class="form-group col-md-2">
                            <input type="text" class="form-control input-sm" id="txtMarcarHoraIngreso" readonly>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">&nbsp;</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <br />
                <div class="box-body ">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label>Salida:</label>
                            <label id="txtMarcarSalida">Salida</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-1" style="width:10%;">
                            <button id="btnMarcarSalida" class="btn btn-warning  btn-sm" type="button">Marcar Salida</button>
                        </div>
                        <div class="form-group col-md-2">
                            <input type="text" class="form-control input-sm" id="txtMarcarHoraSalida" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="~/Content/js/Marcacion/marcacion.js"></script>
}
