@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
}


<section class="content-header">
    <h1> Inicio <small> Panel de Control  </small></h1>
    <ol class="breadcrumb"> Control </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-3 col-xs-4">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>Marcación</h3>
                </div>
                <div class="icon">
                    <i class="fa fa-fw fa-book"></i>
                </div>
                <a href="@Url.Action("Index", "Marcacion")" class="small-box-footer">
                    Ir a Marcación
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>

        @if (User.Identity.GetUserId().Equals("1"))
        {
            <div class="col-lg-3 col-xs-4">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>Horas Trabajadas</h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-clock-o"></i>
                    </div>
                    <a href="@Url.Action("Index", "HorasTrabajadas")" class="small-box-footer">
                        Ir a Horas Trabajadas
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-4">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>Trabajador</h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-user"></i>
                    </div>
                    <a href="@Url.Action("Index", "Trabajador")" class="small-box-footer">
                        Ir a Trabajador
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</section>
