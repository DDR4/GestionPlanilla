@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Marcacion";
}

<section class="content-header">
    <h1>Boleta de Pago</h1>
    <br />

</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">&nbsp;</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body ">
                    <div class="row">
                        <div class="form-group col-md-2">
                            <label>Fecha de Boleta:</label>                            
                        </div>
                        <div class="form-group col-md-2">
                            <input type="text" class="form-control input-sm" id="txtFechaBoleta" readonly>     
                        </div>
                        <div class="form-group col-md-2">                           
                            <button id="btnGenerarBoleta" class="btn btn-success btn-sm" type="button">Generar Boleta de Pago</button>
                        </div>
                    </div>                    
                </div>
                <br />
            </div>
        </div>
    </div>
