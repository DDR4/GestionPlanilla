
@using Microsoft.AspNet.Identity <!-- SIN ESTO SALE ERROR AL CARGAR -->

@{
    ViewBag.Title = "Index";
}

<section class="content-header">
    <h1>Calculos</h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">&nbsp;</h3>
                    <div class="box-tools pull-right">
                        @if (User.Identity.GetUserId().Equals("1"))
                        {
                            <button class="btn btn-success btn-sm-max" id="btnNuevaCargo"><span class="fa fa-plus-square"></span> Nueva Cargo</button>
                        }
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="box-body ">
                    <form id="form1">
                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label for="cboTipoBusqueda">Tipo b&uacute;squeda</label>
                                <select class="form-control input-sm" style="width:100%;" id="cboTipoBusqueda">
                                    <option value="0">Todos</option>
                                    <option value="1">Descripcion</option>
                                    <option value="2">Estado</option>
                                </select>
                            </div>
                            <div id="tipoDescripcion" style="display:none;">
                                <div class="form-group col-md-2">
                                    <label for="txtNombre">Descripcion</label>
                                    <input type="text" class="form-control input-sm" id="txtDescripcion">
                                </div>
                            </div>
                            <div id="tipoEstado" style="display:none;">
                                <div class="form-group col-md-2">
                                    <label for="cboEstado">Estado</label>
                                    <select class="form-control input-sm" id="cboEstado">
                                        <option value="0" selected>Todos</option>
                                        <option value="1">Activo</option>
                                        <option value="2">Inactivo</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group col-md-1">
                                <label for="btnBuscar"><font color="white">_</font></label>
                                <button type="button" class="btn btn-primary btn-sm" id="btnBuscar">
                                    <span class="glyphicon glyphicon-search"></span>&nbsp;&nbsp;Buscar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <br />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">&nbsp;</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                    </div>
                </div>
                <br />
                <div class="box-body ">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="table-responsive">
                                <table id="tblListadoCalculos" class="table table-bordered table-striped table-hover table-condensed" style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th width="10%;">Nombres y Apellidos</th>
                                            <th width="10%;">Sueldo</th>
                                            <th width="10%;">Estado</th>
                                            <th width="8%;"></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/Content/js/Calculos/calculos.js"></script>
}
